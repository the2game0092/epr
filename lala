"""gibt random einen Vornamen aus"""

def Vorname(lste): #lste entweder man oder woman
  
  vlltdplname = numpy.random.choice([i for i in range(8)]+[100]) #jeder wert gleiche Trefferquote.. bedeutet else-Fall (doppelname) hat eine 10 prozentige chance)
  if vlltdplname < 10 :
    return numpy.random.choice(lste)
  else :
    name1 = numpy.random.choice(lste) 
    name2 = name1
    while name1 == name2 :
      name2 = numpy.random.choice(lste)
    return name1+"-"+name2

def mVorname():
  Vorname(man)

def wVorname() :
  Vorname(woman)

